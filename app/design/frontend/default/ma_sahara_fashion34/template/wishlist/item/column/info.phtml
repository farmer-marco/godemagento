/* @var Mage_Wishlist_Model_Item $item */
$item = $this->getItem();
$product = $item->getProduct();
?>
<div class="panel-heading">
	<div class="panel-title text-center">
		<a href="<?php echo $this->getProductUrl($item) ?>" title="<?php echo $this->escapeHtml($product->getName()) ?>"><?php echo $this->escapeHtml($product->getName()) ?></a>
	</div>
</div>
<div class="panel-body">
	<a class="product-image" href="<?php echo $this->getProductUrl($item) ?>" title="<?php echo $this->escapeHtml($product->getName()) ?>">
	    <img src="<?php echo $this->helper('catalog/image')->init($product, 'small_image')->resize(400, 400); ?>" width="400" height="400" alt="<?php echo $this->escapeHtml($product->getName()) ?>" />
	</a>
	<div class="form-inline text-center">
		<div class="form-group col-xs-8">
			<input name="description[<?php echo $item->getWishlistItemId() ?>]" <?php echo ($this->escapeHtml($item->getDescription() ? "value="."'".$item->getDescription()."'" : "")) ?> class="form-control" placeholder="<?php echo $this->__('Comment') ?>"  title="<?php echo $this->__('Comment') ?>"></input>
		</div>
		<button type="submit" name="do" title="<?php echo $this->__('Save') ?>" class="btn btn-primary btn-update col-xs-4"><span><span><?php echo $this->__('Save') ?></span></span></button>
	</div>
	<?php if($this->getSortedChildren()): ?>
	    <div class="item-manage text-center">
	    <?php foreach($this->getSortedChildren() as $childName):?>
	        <?php echo $this->getChildHtml($childName, false);?>
	    <?php endforeach;?>
	    </div>
	<?php endif; ?>
</div>
